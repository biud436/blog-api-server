{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@app/env": ["libs/env/src"],
            "@app/env/*": ["libs/env/src/*"]
        },
        "typeRoots": ["./node_modules/@types", "./types"],
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "include": ["src", "types"]
}
